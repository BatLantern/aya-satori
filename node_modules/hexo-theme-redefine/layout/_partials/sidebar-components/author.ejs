<div class="author flex flex-col justify-center my-2.5 mx-0">
    <div class="name"><%= theme.info.author || config.author %></div>
    <% if (theme.hasOwnProperty('articles') && theme.articles.author_label.enable === true) { %>
        <div class="label">
          <% if (theme.articles.author_label.auto) { %>
            <%- getAuthorLabel(site.posts.length, theme.articles.author_label.auto, theme.articles.author_label.list) %>
          <% } else { %>
            <% theme.articles.author_label.list.forEach(function(label, index) { %>
              <span class="label-item label-item-<%= index + 1 %>"><%= label %></span>
            <% }); %>
          <% } %>
        </div>
    <% } %>
</div>